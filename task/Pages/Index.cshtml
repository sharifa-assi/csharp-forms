@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<form method="post" action="/submit-form">
    <div>
        <label>Name:</label>
        <input type="text" name="Name" value="@Model.Name" />
    </div>
    <div>
        <label>Email:</label>
        <input type="email" name="Email" value="@Model.Email" />
    </div>
      <div>
        <label>Date:</label>
        <input type="date" name="Email" value="@Model.Date" />
    </div>
    <div>
        <label>Message:</label>
        <textarea name="Message">@Model.Message</textarea>
    </div>
    <button type="submit">Submit</button>
</form>